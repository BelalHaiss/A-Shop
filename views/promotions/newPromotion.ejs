<%- layout('layout/boilerplate') %>

    <style>
        body {
            background-image: url('css/imgs/sale.jpg');
            /* background-position: center; */
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
    <div class="container">
        <% if(messages && messages.length) { %>

            <div id="alert" class="alert alert-warning flash-alert alert-dismissible fade show" role="alert">
                <strong>
                    <%= messages %>
                </strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            <% } %>

    </div>
    <div class="row">

        <div class="col-12 col-lg-6 mx-auto p-3 bg-white mt-5">
            <form action="/promotion" method="POST" class=" needs-validation" novalidate>
                <div class="form-group">
                    <label for="name" class="form-label"> Enter promotion code name</label>
                    <input type="text" class="form-control" required name="promotion[name]" id="name">
                </div>
                <div class="form-group">
                    <label for="all-products" class="form-label"> Applies To ? </label>
                    <select class="form-select mb-3" required name="allProduct" aria-label=".form-select ">
                        <option value="">Select All Products or Not</option>
                        <option value="all">All Products</option>
                        <option value="not">not</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="percetange" class="form-label"> promotion code Percent off <b>%</b></label>
                    <input type="number" step=".01" min="1" max="90" required class="form-control"
                        name="promotion[percent]" id="percetange">
                </div>
                <div class="form-group">
                    <label for="start" class="form-label"> Enter promotion code starting date</label>
                    <input type="date" class="form-control" required name="promotion[createdAt]" id="start">
                </div>
                <div class="form-group">
                    <label for="expire" class="form-label"> Enter promotion code expired date</label>
                    <input type="date" class="form-control" required name="promotion[expired]" id="expire">
                </div>

                <button class="btn-primary my-3 d-block w-100">Submit</button>
            </form>
        </div>

    </div>